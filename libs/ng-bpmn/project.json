{
  "name": "ng-bpmn",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ng-bpmn/src",
  "prefix": "ng-bpmn-app",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ng-bpmn/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ng-bpmn/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ng-bpmn/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "release": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "mkdir -p dist/libs/ng-bpmn",
          "cp -r node_modules/bpmn-js/dist/assets dist/libs/ng-bpmn"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ng-bpmn/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ng-bpmn/**/*.ts", "libs/ng-bpmn/**/*.html"]
      }
    }
  }
}
